  "author": "Pankaj Rajwani",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/pankaj-rajwani/crypto-converter-api.git"
  },
  "keywords": [
    "crypto",
    "converter",
    "web app",
    "cryptocurrency",
    "fiat currency"
  ],
  "scripts": {
    "dev": "nodemon ./src/server/index.js",
    "start": "node ./src/server/index.js",
    "test": "jest --silent",
    "test:coverage": "jest --coverage --coverageReporters=html"
  },
  "dependencies": {
    "axios": "^1.6.3",
    "cors": "^2.8.5",
